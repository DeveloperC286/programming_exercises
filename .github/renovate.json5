{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "automerge": true,
  "github-actions": {
    "enabled": false
  },
  "nix": {
    "enabled": true,
    "lockFileMaintenance": {
      "enabled": true,
      "commitMessageAction": "update",
      "commitMessageTopic": "Nix flake lock"
    }
  },
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchFileNames": [
        ".github/workflows/haskell-continuous-integration.yml",
        ".github/workflows/lisp-continuous-integration.yml",
        ".github/workflows/rust-continuous-integration.yml"
      ],
      "enabled": true
    }
  ]
}
